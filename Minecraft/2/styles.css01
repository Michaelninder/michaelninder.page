body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f0f0f0;
}

.container {
    display: flex;
    max-width: 1200px;
    margin: 20px auto;
}

.generator {
    width: 66%;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
}

h2 {
    text-align: center;
}

.item-selection {
    margin-bottom: 20px;
}

.item-selection label {
    display: block;
    margin-bottom: 5px;
}

.item-selection select,
.item-selection input {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    box-sizing: border-box;
}

.enchantments,
.custom-name,
.lores,
.result {
    margin-bottom: 20px;
}

.enchantments h3,
.lores h3,
.result h3 {
    margin-bottom: 10px;
}

.enchantments label,
.lores label {
    display: block;
    margin-bottom: 5px;
}

.enchantments input,
.custom-name input,
.lores input,
#command {
    width: calc(100% - 80px);
    padding: 8px;
    margin-bottom: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    box-sizing: border-box;
}

.lores input {
    margin-right: 10px;
}

#command {
    height: 100px;
}

.result button {
    padding: 10px 20px;
    background-color: #4caf50;
    border: none;
    color: white;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin-top: 10px;
    border-radius: 4px;
    cursor: pointer;
}

.info {
    width: 33%;
    padding-left: 20px;
}

.color-codes {
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
}

table {
    width: 100%;
    border-collapse: collapse;
}

table th,
table td {
    border: 1px solid #ddd;
    padding: 8px;
}

table th {
    background-color: #f2f2f2;
}

.color-codes span {
    font-family: monospace;
}
